@{
    Layout = null;
}
@using Cassette.Nancy
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<YorkshireTec.Api.Infrastructure.BaseViewModel>
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@Model.Page.Title | @Model.Page.TitleSuffix</title>
    <meta name="description" content="A hub for the growing digital community in Yorkshire, where individuals, organisations and user groups of all skill sets can easily see whats going on, find new connections and share knowledge.">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font link from Webtype for Alright Sans family  -->
    <link href="//cloud.webtype.com/css/e31ad4c6-6a40-47af-ad8d-a56030f15cf8.css" rel="stylesheet" type="text/css" />

    @{
        Bundles.Reference("Content/css");
        //Bundles.Reference("Scripts");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.1/modernizr.min.js" type="text/javascript"></script>

    @Bundles.RenderStylesheets()
    @RenderSection("Styles", false)
    @* Google Analytic *@
    <script type="text/javascript">
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-50232510-1', 'yorkshiredigital.com');
        ga('send', 'pageview');

    </script>

</head>
    <body class="home">
        <script src="https://code.jquery.com/jquery-1.10.2.min.js" type="text/javascript"></script>
        @*@Html.Partial("_Header")*@

        @RenderBody()
    

    @Bundles.RenderScripts()
    <script type="text/javascript">
        $(function () {
            if ($('.ui.error').length > 0) {
                $(window).scrollTop($('.ui.error').prev().position().top);
            }
        });
    </script>
    @if (!string.IsNullOrEmpty(Model.Page.Title))
    {
        <script type="text/javascript">
            $(function () {
                $('#nav-primary .item:contains(@Model.Page.CurrentNav)').addClass('current');
            });
        </script>
    }

    @RenderSection("Scripts", false)
        
        @* Add This *@
        <script type="text/javascript">
            var addthis_config = addthis_config || {};
            addthis_config.data_track_addressbar = false;
        </script>
    </body>
</html>