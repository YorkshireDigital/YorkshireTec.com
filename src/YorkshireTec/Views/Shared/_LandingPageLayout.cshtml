@using Cassette.Nancy
@{
    Layout = "Shared/_Layout.cshtml";

    Bundles.Reference("Scripts/mailchimp");
}
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<YorkshireTec.Infrastructure.BaseViewModel>
<section class="home-banner">
    <div class="logo-site">
    </div>
    <div class="hero">
        <h1>Bringing Yorkshire's digital community together</h1>
        <p>
            A hub for the growing digital community in Yorkshire, where individuals, organisations and user groups of all skill sets can easily see what's going on, find new connections and share knowledge.
        </p>
        <p>
            If you run a meetup in Yorkshire and would like to get involved  <a href="mailto:info@yorkshiredigital.com">let us know</a>.
        </p>
    </div>
</section>
@RenderBody()